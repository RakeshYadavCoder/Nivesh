<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Authentication.Login.LoginActivity">

    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/header2"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.20"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.110" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header3"
        android:fontFamily="@font/segoe_ui_regular"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/header1"
        app:layout_constraintTop_toBottomOf="@+id/header1"
        app:layout_constraintVertical_bias="0.00" />

    <TextView
        android:id="@+id/header3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="Forgot Password"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/start_date_edt_xml"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <EditText
        android:id="@+id/start_date_edt_xml"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/etbg"
        android:drawableStart="@drawable/user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/segoe_ui_semilight"
        android:hint="@string/eidphno"
        android:inputType="text"
        android:maxEms="24"
        android:maxLines="1"
        android:padding="13dp"
        android:paddingStart="18dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/dgrey"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header3"
        app:layout_constraintVertical_bias="0.05" />


    <Button
        android:id="@+id/send_email_btn_xml_for_login"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/btnbg"
        android:fontFamily="@font/montserrat_medium"
        android:text="Send Email"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:stateListAnimator="@null"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/start_date_edt_xml"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/start_date_edt_xml"
        app:layout_constraintTop_toBottomOf="@+id/start_date_edt_xml"
        app:layout_constraintVertical_bias="0.06" />


    <TextView
        android:id="@+id/donthave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/donthave"
        android:textColor="@color/dgrey"
        android:textSize="15sp"
        android:fontFamily="@font/segoe_ui_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/send_email_btn_xml_for_login"
        app:layout_constraintTop_toBottomOf="@+id/send_email_btn_xml_for_login"
        app:layout_constraintVertical_bias="0.21" />

    <TextView
        android:id="@+id/signup_text_for_redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/signup"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/send_email_btn_xml_for_login"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/donthave"
        app:layout_constraintTop_toBottomOf="@+id/send_email_btn_xml_for_login"
        app:layout_constraintVertical_bias="0.23" />

</androidx.constraintlayout.widget.ConstraintLayout>