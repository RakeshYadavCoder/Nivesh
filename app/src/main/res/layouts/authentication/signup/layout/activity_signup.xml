<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Authentication.SignUp.SignUpActivity">

    <TextView
        android:id="@+id/header1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/header1"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header4"
        android:fontFamily="@font/segoe_ui_regular"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/header1"
        app:layout_constraintTop_toBottomOf="@+id/header1"
        app:layout_constraintVertical_bias="0.00" />

    <TextView
        android:id="@+id/header3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_bold"
        android:text="@string/header6"
        android:textColor="@color/blue"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/email_edt_xml"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.285" />

    <EditText
        android:id="@+id/email_edt_xml"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/etbg"
        android:drawableStart="@drawable/user"
        android:drawablePadding="10dp"
        android:fontFamily="@font/segoe_ui_semilight"
        android:hint="@string/eid"
        android:inputType="textEmailAddress"
        android:maxEms="24"
        android:maxLines="1"
        android:padding="13dp"
        android:paddingStart="18dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/dgrey"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header3"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/password_edt_xml"
        android:inputType="textPassword"
        android:maxLines="1"
        android:maxEms="24"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/etbg"
        android:fontFamily="@font/segoe_ui_semilight"
        android:hint="@string/pwd"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10dp"
        android:padding="13dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/dgrey"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/email_edt_xml"
        app:layout_constraintStart_toStartOf="@+id/email_edt_xml"
        app:layout_constraintTop_toBottomOf="@+id/email_edt_xml"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/re_password_edt_xml"
        android:inputType="textPassword"
        android:maxLines="1"
        android:maxEms="24"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/etbg"
        android:fontFamily="@font/segoe_ui_semilight"
        android:hint="@string/cpwd"
        android:drawableStart="@drawable/lock"
        android:drawablePadding="10dp"
        android:padding="13dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/dgrey"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/password_edt_xml"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/password_edt_xml"
        app:layout_constraintTop_toBottomOf="@+id/password_edt_xml"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/continue_btn_xml"
        android:layout_width="300dp"
        android:layout_height="52dp"
        android:background="@drawable/btnbg"
        android:fontFamily="@font/montserrat_medium"
        android:text="@string/con"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:stateListAnimator="@null"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/re_password_edt_xml"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="@+id/re_password_edt_xml"
        app:layout_constraintTop_toBottomOf="@+id/re_password_edt_xml"
        app:layout_constraintVertical_bias="0.07" />

    <CheckBox
        android:id="@+id/founder_tc_check_box"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:button="@drawable/ckbx"
        android:buttonTint="@color/turquoise"
        android:fontFamily="@font/segoe_ui_semibold"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="17dp"
        android:text="@string/terms"
        android:textColor="@color/dgrey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/continue_btn_xml"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/continue_btn_xml"
        app:layout_constraintTop_toBottomOf="@+id/continue_btn_xml"
        app:layout_constraintVertical_bias="0.01" />

    <View
        android:id="@+id/ld"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginEnd="5dp"
        android:background="@color/dgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/olw"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/founder_tc_check_box"
        app:layout_constraintTop_toBottomOf="@+id/continue_btn_xml"
        app:layout_constraintVertical_bias="0.315" />

    <TextView
        android:id="@+id/olw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="96dp"
        android:fontFamily="@font/segoe_ui_regular"
        android:gravity="center"
        android:text="@string/ors"
        android:textColor="@color/dgrey"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/continue_btn_xml"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/continue_btn_xml"
        app:layout_constraintTop_toBottomOf="@+id/continue_btn_xml"
        app:layout_constraintVertical_bias="0.3" />

    <View
        android:id="@+id/rd"
        android:layout_width="0dp"
        android:layout_height="0.5dp"
        android:layout_marginStart="5dp"
        android:background="@color/dgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/continue_btn_xml"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/olw"
        app:layout_constraintTop_toBottomOf="@+id/continue_btn_xml"
        app:layout_constraintVertical_bias="0.315" />

    <ImageButton
        android:id="@+id/google_btn_xml"
        android:layout_width="140sp"
        android:layout_height="54dp"
        android:background="@drawable/gbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/founder_tc_check_box"
        app:layout_constraintTop_toBottomOf="@+id/olw"
        app:layout_constraintVertical_bias="0.2" />

    <ImageButton
        android:id="@+id/facebook_btn_xml"
        android:layout_width="140dp"
        android:layout_height="54dp"
        android:background="@drawable/fbtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/continue_btn_xml"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/google_btn_xml"
        app:layout_constraintTop_toBottomOf="@+id/olw"
        app:layout_constraintVertical_bias="0.2"/>

    <TextView
        android:id="@+id/donthave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/have"
        android:textColor="@color/dgrey"
        android:textSize="15sp"
        android:fontFamily="@font/segoe_ui_semibold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/google_btn_xml"
        app:layout_constraintTop_toBottomOf="@+id/google_btn_xml"
        app:layout_constraintVertical_bias="0.32" />

    <TextView
        android:id="@+id/login_text_for_redirect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/segoe_ui_bold"
        android:text="@string/login"
        android:textColor="@color/blue"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/facebook_btn_xml"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@+id/donthave"
        app:layout_constraintTop_toBottomOf="@+id/facebook_btn_xml"
        app:layout_constraintVertical_bias="0.345" />

</androidx.constraintlayout.widget.ConstraintLayout>