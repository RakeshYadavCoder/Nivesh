<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/lblue">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/lblue" />
            <stroke android:color="@color/vlightblue" android:width="0.8dp"/>
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/vlightblue" />
            <stroke android:color="@color/lavenderblue" android:width="0.8dp"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</ripple>